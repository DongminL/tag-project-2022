<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zootopedia</title>
    <script src="https://kit.fontawesome.com/c58241218c.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nanum+Gothic:wght@400;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/join.css">
</head>

{{>layouts/header}}

<section id="section">
    <h1>회원가입</h1>
    <div id="join">
        <form id="joinForm" action="/user/signup" method="post">
            <!-- 아이디 -->
            <label for="join_id"><h5>아이디<p id="star">*</p></h5></label>
            <input id="join_id" type="text" placeholder="아이디" name="userId" value="{{#user}}{{user.userId}}{{/user}}">
            {{#valid_userId}} <span id="valid">{{valid_userId}}</span> {{/valid_userId}}

            <!-- 비밀번호 -->
            <label for="join_password"><h5>비밀번호<p id="star">*</p></h5></label>
            <input id="join_password" type="password" placeholder="비밀번호" name="password" value="{{#user}}{{user.password}}{{/user}}">
            {{#valid_password}} <span id="valid">{{valid_password}}</span> {{/valid_password}}

            <!-- 닉네임 -->
            <label for="join_nickname"><h5>닉네임<p id="star">*</p></h5></label>
            <input id="join_nickname" type="text" placeholder="닉네임" required name="nickname" value="{{#user}}{{user.nickname}}{{/user}}">
            {{#valid_nickname}} <span id="valid">{{valid_nickname}}</span> {{/valid_nickname}}

            <button id="join_btn" type="submit">완료</button>
        </form>
    </div>
</section>

{{>layouts/footer}}